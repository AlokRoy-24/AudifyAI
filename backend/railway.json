{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "providers": ["python"],
        "phases": {
          "setup": {
            "nixPkgs": ["python3", "gcc", "file"]
          }
        }
      }
    },
    "deploy": {
      "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
      "healthcheckPath": "/api/v1/health",
      "healthcheckTimeout": 300,
      "restartPolicyType": "ON_FAILURE"
    }
  }